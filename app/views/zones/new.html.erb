<p class="magicSentence">Add Zone</p>
<center>
<div class="box">
	
	<% @zonesUserCanAdd.each do |zone| %>
		<div class="buttonBox"><%= form_for @newzone do |f| %>
		    <%= hidden_field_tag 'zone', zone  %>
	
			
